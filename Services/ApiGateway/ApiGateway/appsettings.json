      "profile_route": {
        "ClusterId": "profile_cluster",
        "Match": {"Path": "/api/profiles/{**catch-all}"},
        "Transform": [{"PathRemovePrefix": "/api/profiles"}]

      },
      "vacancy_route": {
        "ClusterId": "vacancy_cluster",
        "Match": {"Path": "/api/vacancies/{**catch-all}"},
        "Transform": [{"PathRemovePrefix": "/api/vacancies"}]

      },
      "resume_route": {
        "ClusterId": "resume_cluster",
        "Match": {"Path": "/api/resumes/{**catch-all}"},
        "Transform": [{"PathRemovePrefix": "/api/resumes"}]

      },
      "feedback_route": {
        "ClusterId": "feedback_cluster",
        "Match": {"Path": "/api/feedbacks/{**catch-all}"},
        "Transform": [{"PathRemovePrefix": "/api/feedbacks"}]
      }
    },
    "Clusters": {
      "profile_cluster": {
        "Destinations": {
          "profile1": { "Address": "http://profileservice:5000/" }
        }
      },
      "vacancy_cluster": {
        "Destinations": {
          "vacancy1": { "Address": "http://vacancyservice:5000/" }
        }
      },
      "resume_cluster": {
