{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Authority": "http://authservice",
    "Issuer": "AuthServer",
    "Audience": "AuthAppClient",
    "Key": "WQj18f2ZwoCV3qLPm3iWyEyxgJpglPUo"
  },
  "ReverseProxy": {
    "Routes":
    {
      "auth_route": {
        "ClusterId": "auth_cluster",
        "Match": {"Path": "/api/auth/{**catch-all}"},
        "Transform": [{"PathRemovePrefix": "/api/auth"}]
      },
      "worker_route": {
        "ClusterId": "worker_cluster",
        "Match": {"Path": "/api/workers/{**catch-all}"},
        "Transform": [{"PathRemovePrefix": "/api/workers"}]
      },
      "company_route": {
        "ClusterId": "company_cluster",
        "Match": {"Path": "/api/companies/{**catch-all}"},
        "Transform": [{"PathRemovePrefix": "/api/companies"}]
      },
     
      "feedback_route": {
        "ClusterId": "feedback_cluster",
        "Match": {"Path": "/api/feedbacks/{**catch-all}"},
        "Transform": [{"PathRemovePrefix": "/api/feedbacks"}]
      }
    },
    "Clusters": {
      "auth_cluster": {
        "Destinations": {
          "profile1": {"Address":  "http://authservice:8080"}
        }
      },
      "worker_cluster": {
        "Destinations": {
          "profile1": { "Address": "http://workerservice:8080/" }
        }
      },
      "company_cluster": {
        "Destinations": {
          "profile1": { "Address": "http://companyservice:8080/" }
        }
      },
      "feedback_cluster": {
        "Destinations": {
          "feedback1": { "Address": "http://feedbackservice:8080/" }
        }
      }
    }
  }
}
